<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/decrbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:onClick="decrement"
        android:text="@string/decrButtonLabel" />

    <TextView
        android:id="@+id/countText"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:textSize="100sp"
        android:freezesText="true"
        android:gravity="center"
        android:text="@string/startText" />

    <Button
        android:id="@+id/incrbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:onClick="increment"
        android:text="@string/incrButtonLabel" />


    <View
        android:id="@+id/divider-top"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/devInfo"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:freezesText="true"
        android:gravity="center"
        android:onClick="developerInfo"
        android:text="@string/devInfoLabel" />

    <View
        android:id="@+id/divider-bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>